{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@src/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "@assets/*": ["./assets/*"],
      "@sharedcomponents/*": ["./src/shared/components/*"],
      "@sharedvalidation/*": ["./src/shared/validation/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
